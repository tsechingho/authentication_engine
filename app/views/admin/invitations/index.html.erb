<%# render :partial => 'admin/shared/restful_links', :object => @invitation %>
<%# auto_title %>


<table>
  <tr>
    <th>Sender</th>
    <th>Recipient</th>
    <th>Created</th>
    <th>Sent</th>
  </tr>
  <% for invitation in @invitations %>
    <tr>
      <td><%=h invitation.sender ? invitation.sender.name : 'self' %></td>
      <td><%=h invitation.recipient_email %></td>
      <td><%=h invitation.created_at %></td>
      <td>
			<% if invitation.sent_at.nil? %>
		    <%= link_to(image_tag('authentication_engine/email_go.png', :class => 'inline_icon', :alt => '', :title => "Send invitation ..."), deliver_admin_invitation_path(invitation), :method => :put) %>
			<% else %>
				<%=h invitation.sent_at %>
			<% end %>
			</td>
      <td><%= link_to "Show", admin_invitation_path(invitation) %></td>
      <td><%= link_to "Edit", edit_admin_invitation_path(invitation) %></td>
      <td><%= link_to "Destroy", admin_invitation_path(invitation), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

